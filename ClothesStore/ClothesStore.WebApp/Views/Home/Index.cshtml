@model List<ClothesStore.Model.ModelView.ProductAndProductConfigModelView>
@{
    ViewData["Title"] = "Home Page";
    var products = (List<ClothesStore.Model.ModelView.ProductAndProductConfigModelView>)ViewBag.Product;
}

<div class="content_top">
    <h3 class="m_1">Latest Products</h3>
    <div class="container">
        <div class="box_1">
            <div class="col-md-7">
                <div class="section group">
                    @foreach (var item in Model)
                    {
                        //var url = "chi-tiet/" + item.product.Slug + "-" + item.product.Id;
                        <div class="col_1_of_3 span_1_of_3 simpleCart_shelfItem">
                            <div class="shop-holder">
                                <div class="product-img">
                                    <a href="/Product/SingleProduct?id=@item.product.Id">
                                        <img width="225" height="265" src="@item.product.Image" class="img-responsive" alt="@item.product.Name">
                                    </a>
                                    <a href="" class="button item_add"></a>
                                </div>
                            </div>
                            <div class="shop-content" style="height: 80px;">
                                @*<div><a href="single.html" rel="tag">humour</a></div>*@

                                <h3><a href="/Product/SingleProduct?id=@item.product.Id">@item.product.Name</a></h3>
                                @foreach (var configPro in item.configs.OrderByDescending(x => x.Id))
                                {
                                    <span class="amount item_price">@configPro.Price </span>
                                    break;
                                }

                            </div>
                        </div>
                    }

                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="col-md-5 row_3">
                <div class="about-block-content">
                    <div class="border-add"></div>
                    <h4>About Us</h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Obcaecati beatae quam voluptatibus deleniti ipsa consequatur!</p>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing.</p>
                    <p>		        	</p>
                </div>
                <img src="/client/images/pic9.jpg" class="img-responsive" alt="" />
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="content_bottom">
</div>
<div class="content_bottom-grid">
    <div class="col-md-6 row_4"></div>
    <div class="col-md-6">
        <div class="row_5">
            @foreach (var item in products)
            {
                <div class="col_1_of_3 span_1_of_3 simpleCart_shelfItem">
                    <div class="shop-holder">
                        <div class="product-img">
                            <a href="/Product/SingleProduct?id=@item.product.Id">
                                <img width="225" height="265" src="@item.product.Image" class="img-responsive" alt="@item.product.Name">
                            </a>
                            <a href="" class="button item_add"></a>
                        </div>
                    </div>
                    <div class="shop-content" style="height: 80px;">
                        @*<div><a href="single.html" rel="tag">humour</a></div>*@
                        <h3><a href="/Product/SingleProduct?id=@item.product.Id">@item.product.Name</a></h3>
                        @foreach (var configPro in item.configs.OrderByDescending(x => x.Id))
                        {
                            <span class="amount item_price">@configPro.Price </span>
                            break;
                        }

                    </div>
                </div>
            }
           
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>


@model List<ClothesStore.Model.ModelView.CartItemModelView>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="check">
        <div class="col-md-9 cart-items">
            <h1>My Shopping Bag (2)</h1>
            <script>
                $(document).ready(function (c) {
                    $('.close1').on('click', function (c) {
                        $('.cart-header').fadeOut('slow', function (c) {
                            $('.cart-header').remove();
                        });
                    });
                });
            </script>
            <div class="list-item">

            </div>
            @foreach (var item in Model)
            {
                <div class="cart-header" data-id="@item.ProductId">
                    <div class="close1"> </div>
                    <div class="cart-sec simpleCart_shelfItem">
                        <div class="cart-item cyc">
                            <img src="@item.Image" class="img-responsive" alt="@item.ProductName" />
                        </div>
                        <div class="cart-item-info">
                            <h3><a href="/Product/SingleProduct?Id=@item.ProductId">@item.ProductName)</a></h3>
                            <ul class="qty">
                                <li><p>Size : @item.Size</p></li>
                                <li><p>Color : @item.Color</p></li>
                                <li><p>Qty : @item.Quantity</p></li>
                            </ul>
                            <div class="delivery">
                                <p>Service Charges : Rs.100.00</p>
                                <span>Delivered in 2-3 bussiness days</span>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                    </div>
                </div>
            }


        </div>
        <div class="col-md-3 cart-total">
            <a class="continue" href="/">Continue to basket</a>
            <div class="price-details">
                <h3>Price Details</h3>
                <span>Total</span>
                <span class="total1">6200.00</span>
                <span>Discount</span>
                <span class="total1">---</span>
                <span>Delivery Charges</span>
                <span class="total1">150.00</span>
                <div class="clearfix"></div>
            </div>
            <ul class="total_price">
                <li class="last_price"> <h4>TOTAL</h4></li>
                <li class="last_price"><span>6350.00</span></li>
                <div class="clearfix"> </div>
            </ul>


            <div class="clearfix"></div>
            <a class="order" href="#">Place Order</a>
            <div class="total-item">
                <h3>OPTIONS</h3>
                <h4>COUPONS</h4>
                <a class="cpns" href="#">Apply Coupons</a>
                <p><a href="#">Log In</a> to use accounts - linked coupons</p>
            </div>
        </div>
    </div>
</div>

@section script{
    <script>
        $(document).ready(function () {
            let cartStr = localStorage.getItem("Cart");
            if (cartStr != null) {
                let cartJson = JSON.parse(cartStr);
                $(cartJson).each(function (index, item) {
                    let row = ` <div class="cart-header" data-id="${item.configId}">
                                        <div class="close1"> </div>
                                        <div class="cart-sec simpleCart_shelfItem">
                                            <div class="cart-item cyc">
                                                <img src="${item.img}" class="img-responsive" alt="" />
                                            </div>
                                            <div class="cart-item-info">
                                                <h3><a>${item.productName}</a></h3>
                                                <ul class="qty">
                                                    <li><p>Size : ${item.size}</p></li>
                                                    <li><p>Color : ${item.color}</p></li>
                                                    <li><p>Qty : ${item.stock}</p></li>
                                                </ul>
                                                <div class="delivery">
                                                    <p>Service Charges : Rs.100.00</p>
                                                    <span>Delivered in 2-3 bussiness days</span>
                                                    <div class="clearfix"></div>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>`;
                    $('.list-item').append(row);
                })
            }
        })
    </script>

}
